<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_margin="@dimen/_10ssp"
    android:orientation="vertical"
    tools:context=".Fragment.ConditionAgreeMentFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_7ssp"
        android:elevation="@dimen/_7ssp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40ssp"
                android:background="@color/red"
                android:layout_weight="3.7"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="@dimen/_40ssp"
                    android:layout_height="@dimen/_25ssp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5ssp"
                    android:src="@drawable/back_icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_icon"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_17ssp"
                    android:fontFamily="@font/sofia_pro_regular"
                    android:text="@string/blood_Require"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_300sdp"
                        android:src="@drawable/blood_donate_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Electronic Record and Legal Framework:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <!-- Explanation for "Electronic Record and Legal Framework" -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The document starts by emphasizing that it is an electronic record in accordance with the Information Technology Act, 2000. It acknowledges the legal framework governing electronic records and the amendments made by the Information Technology Act, 2000."
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <!-- TextView for "Electronic Signatures" -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2. Electronic Signatures:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <!-- Explanation for "Electronic Signatures" -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The document explicitly states that as an electronic record, it does not require any physical or digital signature. This aligns with the recognition of electronic signatures as legally valid in many jurisdictions, including India."
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3. Compliance with IT Rules:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The document mentions that it is published in compliance with Rule 3(1) of the Information Technology (Intermediaries Guidelines) Rules, 2011. This rule mandates the publication of rules, regulations, privacy policy, and terms of use for online platforms."
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4. User Agreement:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Users are informed that by accessing the Website or Application, they agree to be bound by the Terms of Use and Privacy Policy, whether or not they create an account. This emphasizes the importance of users understanding and accepting the terms and conditions before using the services."
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5. Definition of Terms:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Definitions of key terms such as 'User,' 'Party,' and 'We/Us' are provided to ensure clarity and understanding of these terms throughout the document."
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6. Purpose of the Application:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The document outlines that the Application is designed to facilitate connections between users, provide technical accessibility, and create a platform for seamless transactions. The services may include third-party products and services integrated at the discretion of the Company."
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7. Terminology Relationship:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="It's highlighted that the Terms and Privacy Policy are co-terminus, meaning that the expiration or termination of one will lead to the termination of the other. This reinforces the interdependence of the terms and policies."
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8. Collection of Personal Information:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The document informs users that the Company collects personal information provided by users through the Application. This includes a wide range of data such as user names, passwords, email addresses, and other details. The purpose is to customize and improve user experiences on the platform."
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9. Use of Cookies:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The use of cookies is explained, clarifying that these are small pieces of information stored by web servers on web browsers. Users are made aware that the Application uses both permanent and temporary cookies, and their consent is sought."
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10. Sharing of Personal Information:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Users are informed that the Company may share personal information with other entities for purposes such as fraud prevention and to facilitate joint or co-branded services. Disclosure may also occur if required by law."
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <Button
                        android:id="@+id/btnAgree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Agree"
                        android:background="@color/red"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="16dp"/>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        </androidx.cardview.widget.CardView>



</ScrollView>
