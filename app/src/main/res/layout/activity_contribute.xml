<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContributeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/newBlue"
        android:layout_weight="3.7"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="@dimen/_5ssp"
            android:backgroundTint="@color/newBlue"
            app:cardCornerRadius="@dimen/_7ssp">
        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_40ssp"
            android:layout_height="@dimen/_25ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginLeft="@dimen/_5ssp"
            android:src="@drawable/back_icon" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_icon"
            android:textColor="@color/new_white"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="@dimen/_40ssp"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/sofia_pro_regular"
            android:text="Contribute"
            />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_238sdp"
                android:src="@drawable/saving_money_icon" />
            <TextView
                android:id="@+id/tx1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make a Contribute Now"
                android:layout_marginTop="@dimen/_10ssp"
                android:textSize="@dimen/_20ssp"
                android:layout_marginLeft="@dimen/_10ssp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txDownload"
                android:layout_below="@+id/tx1"
                android:layout_width="@dimen/_100ssp"
                android:layout_height="@dimen/_30ssp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_17ssp"
                android:background="@drawable/shape_button_red"
                android:gravity="center"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/_3ssp"
                android:layout_marginLeft="@dimen/_80ssp"
                android:text="Contribute Now"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />

        </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/_5ssp"
                    android:layout_margin="@dimen/_10ssp"
                    app:cardCornerRadius="@dimen/_5ssp">
                    <ImageView
                        android:id="@+id/imgUpper"
                        android:layout_width="@dimen/_40ssp"
                        android:layout_height="@dimen/_40ssp"
                        android:src="@drawable/less_expend"
                        android:layout_marginRight="@dimen/_20ssp"
                        android:layout_gravity="end"/>
                <ImageView
                    android:id="@+id/imgLower"
                    android:layout_width="@dimen/_40ssp"
                    android:layout_height="@dimen/_40ssp"
                    android:src="@drawable/expend_more_icon"
                    android:layout_marginRight="@dimen/_20ssp"
                    android:layout_gravity="end"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txTheory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5ssp"
                    android:text="Blood donation is a selfless act that plays a vital role in saving lives. By contributing blood, donors provide an essential resource for medical treatments,surgeries, and emergency situations. This altruistic tradition fosters a sense of community and shared responsibility."
                    android:textSize="@dimen/_15ssp"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>