<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="@dimen/_3ssp"
        app:cardElevation="@dimen/_5ssp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">


            <LinearLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.6">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_145sdp">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_7ssp"
                        android:layout_marginBottom="@dimen/_15ssp"
                        android:src="@drawable/blood_drop" />

                    <TextView
                        android:id="@+id/txBloodGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B+"
                        android:padding="@dimen/_10ssp"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7ssp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sofia_pro_medium"
                        android:gravity="start"
                        android:maxLines="1"
                        android:paddingHorizontal="5dp"
                        android:text="Rohit Malviya"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sofia_pro_medium"
                        android:gravity="start"
                        android:maxLines="1"
                        android:paddingHorizontal="5dp"
                        android:text="6"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp" />

                    <TextView
                        android:id="@+id/txBrand"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_1ssp"
                        android:fontFamily="@font/sofia_pro_medium"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="units (Blood)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/txLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2ssp"
                    android:gravity="start"
                    android:hint="location Ahemdabad, india"
                    android:paddingHorizontal="5dp"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/txCritical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5ssp"
                    android:layout_marginTop="@dimen/_5ssp"
                    android:fontFamily="@font/sofia_pro_medium"
                    android:maxLines="1"
                    android:text="Critical"
                    android:textColor="@color/newBlue"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/txTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofia_pro_medium"
                    android:gravity="start"
                    android:maxLines="1"
                    android:paddingHorizontal="5dp"
                    android:text="Mondat, Dec, 4"
                    android:textSize="@dimen/_13ssp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgShare"
                    android:layout_width="@dimen/_40ssp"
                    android:layout_height="@dimen/_28ssp"
                    android:src="@drawable/share_icon"
                    android:layout_marginTop="@dimen/_2ssp"/>
                    <ImageView
                        android:layout_width="@dimen/_30ssp"
                        android:layout_height="@dimen/_25ssp"
                        android:src="@drawable/location_share_icon"
                        android:layout_marginTop="@dimen/_5ssp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40ssp"
                        android:layout_gravity="end"
                        android:gravity="end">

                       <!-- <Button
                            android:id="@+id/btnAccept"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30ssp"
                            android:text="Accept"
                            android:textSize="@dimen/_11ssp"
                            android:backgroundTint="@color/newBlue"
                            android:layout_marginRight="@dimen/_10ssp"/>-->
                        <RelativeLayout
                            android:id="@+id/btnAccept"
                            android:layout_width="@dimen/_60ssp"
                            android:layout_height="@dimen/_20ssp"
                            android:layout_marginRight="@dimen/_10ssp"
                            android:layout_gravity="center"
                            >
                        <ImageView
                            android:id="@+id/ivFollowed"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/edittext_shape"
                            android:src="@drawable/followed"
                            />
                   <TextView
                       android:id="@+id/txAccept"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:text="Accept"
                       android:gravity="center"
                       android:background="@drawable/shape_button"
                       android:textSize="@dimen/_14ssp"
                       android:textColor="@color/white"/>


                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>