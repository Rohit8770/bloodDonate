<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BloodHomeActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/newBlue"
        android:layout_weight="0.4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:background="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/newBlue">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40ssp"
            android:backgroundTint="@color/newBlue"
            android:layout_margin="@dimen/_3ssp"
            android:elevation="@dimen/_7ssp"
            app:cardElevation="@dimen/_7ssp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5ssp">
                <ImageView
                    android:layout_width="@dimen/_40ssp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_icon" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:layout_marginRight="@dimen/_15ssp"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome"
                        android:textSize="@dimen/_15ssp"
                        android:layout_marginRight="@dimen/_5ssp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_20ssp"
                        android:text="Rohit malviya"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/white"/>
                </LinearLayout>

               <!-- <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/notification_icon" />
                </LinearLayout>-->
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_70ssp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10ssp"
                android:layout_margin="@dimen/_7ssp"
                android:elevation="@dimen/_10ssp"
                app:cardElevation="@dimen/_10ssp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/_50ssp"
                            android:layout_height="@dimen/_55ssp"
                            android:src="@drawable/blood_icon"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25ssp"
                            android:text="Blood Group"
                            android:gravity="center"
                            android:fontFamily="@font/sofia_pro_semi_bold"
                            android:textSize="@dimen/_12ssp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/txUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/_13ssp"
                            android:text="Rohit malviya"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_15ssp"
                            android:text="USERNAME"
                            android:fontFamily="@font/sofia_pro_semi_bold"
                            android:gravity="center"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<LinearLayout
                android:id="@+id/ly2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5ssp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvBloodType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>-->

        <!--    <LinearLayout
                android:id="@+id/indicator_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/newBlue"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_15ssp">-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                app:cardCornerRadius="@dimen/_7ssp"
                android:layout_marginRight="@dimen/_7ssp"
                android:layout_marginLeft="@dimen/_7ssp">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/slideViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/indicator_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal" />




    <LinearLayout
        android:id="@+id/ly3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:layout_below="@+id/ly2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRequestBlood"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90ssp"
            app:cardCornerRadius="@dimen/_10ssp"
            android:elevation="@dimen/_10ssp"
            app:cardElevation="@dimen/_10ssp"
            android:layout_margin="@dimen/_3ssp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
            <ImageView
                android:layout_width="@dimen/_80ssp"
                android:layout_height="@dimen/_60ssp"
                android:layout_gravity="center"
                android:src="@drawable/blood_donation_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blood_Require"
                android:gravity="center"
                android:fontFamily="@font/sofia_pro_semi_bold"
                android:textSize="@dimen/_11ssp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDonateBlood"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90ssp"
            app:cardCornerRadius="@dimen/_10ssp"
            android:elevation="@dimen/_10ssp"
            app:cardElevation="@dimen/_10ssp"
            android:layout_margin="@dimen/_3ssp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="@dimen/_80ssp"
                    android:layout_height="@dimen/_60ssp"
                    android:layout_gravity="center"
                    android:src="@drawable/blood_bank_icon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/blood_Donate"
                    android:fontFamily="@font/sofia_pro_semi_bold"
                    android:textSize="@dimen/_12ssp"
                    android:gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCompleteBlood"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90ssp"
                app:cardCornerRadius="@dimen/_10ssp"
                android:elevation="@dimen/_10ssp"
                app:cardElevation="@dimen/_10ssp"
                android:layout_margin="@dimen/_3ssp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="@dimen/_80ssp"
                        android:layout_height="@dimen/_50ssp"
                        android:layout_gravity="center"
                        android:src="@drawable/verification"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Complete data"
                        android:fontFamily="@font/sofia_pro_semi_bold"
                        android:textSize="@dimen/_12ssp"
                        android:gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

            <RelativeLayout
                android:id="@+id/ly22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ly3"
                android:layout_margin="@dimen/_2ssp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvBloodGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_15ssp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/tvNoData"
                        android:layout_width="@dimen/_80ssp"
                        android:layout_height="@dimen/_80ssp"
                        android:src="@drawable/no_data_found" />
                    <TextView
                        android:id="@+id/tvNoDataFound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5ssp"
                        android:text="No Data Found"
                        android:textSize="@dimen/_18ssp" />
                </LinearLayout>
            </RelativeLayout>



        </LinearLayout>
    </ScrollView>

</RelativeLayout>